# Production Environment Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://boltaiznakomsya.com

# Database Configuration
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=boltaiznakomsya_prod
DB_USER=boltaiznakomsya_user
DB_PASSWORD=your-super-secure-db-password

# Redis Configuration
REDIS_URL=redis://your-production-redis-host:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Security
CORS_ORIGIN=https://boltaiznakomsya.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/boltaiznakomsya/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/boltaiznakomsya.crt
SSL_KEY_PATH=/etc/ssl/private/boltaiznakomsya.key

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Email (для уведомлений)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id 